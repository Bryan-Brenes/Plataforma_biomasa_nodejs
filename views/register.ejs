<div class="valign-wrapper container-login grey lighten-4">
    <div class="register-content-container z-depth-5">
        <h3>Registro</h3>
        <form action="/authUsuarios/register" method="POST">
            <div class="row">
                <div class="col s6 right-align">
                    <p>
                        <label>
                            <input name="tipoUsuario" value="particular" type="radio"/>
                            <span>Particular</span>
                        </label>
                    </p>
                </div>
                <div class="col s6">
                    <p>
                        <label>
                            <input name="tipoUsuario" value="compañía" type="radio" checked />
                            <span>Compañía</span>
                        </label>
                    </p>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s6">
                    <input name="nombre" id="nombre" type="text" class="validate" value="<%= typeof nombre != 'undefined' ? nombre : '' %>">
                    <label for="nombre">Nombre</label>
                </div>
                <div class="input-field col s6">
                    <select name="rol">
                        <option value="no" disabled selected>¿Qué tipo de usuario eres?</option>
                        <option value="comprador">Comprador</option>
                        <option value="proveedor">Proveedor</option>
                        <option value="distribuidor">Distribuidor</option>
                    </select>
                    <label>Tipo de usuario</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <select name="provincia">
                        <option value="no" disabled selected>Provincia</option>
                        <option value="alajueja">Alajueja</option>
                        <option value="cartago">Cartago</option>
                        <option value="guanacaste">Guanacaste</option>
                        <option value="heredia">Heredia</option>
                        <option value="limón">Limón</option>
                        <option value="puntarenas">Puntarenas</option>
                        <option value="san josé">San José</option>
                    </select>
                    <label>Provincia</label>
                </div>
                    
                <div class="input-field col s6">
                    <input name="telefono" id="telefono" type="text" class="validate" value="<%= typeof telefono != 'undefined' ? telefono : '' %>">
                    <label for="telefono">Teléfono</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6 full-height-2">
                    <textarea id="indicaciones" name="direccion" class="materialize-textarea full-height-2" value="<%= typeof direccion != 'undefined' ? direccion : '' %>" ></textarea>
                    <label for="indicaciones">Indicaciones</label>
                </div>
                <div class="col s6">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" name="email" type="email" class="validate" value="<%= typeof email != 'undefined' ? email : '' %>">
                            <label for="email">Correo electrónico</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="password" name="password" type="password" class="validate">
                            <label for="password">Contraseña</label>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class='row'>
                <button type='submit' id="btn_login" class='col s12 btn btn-large waves-effect'>Registrarse</button>
            </div>
            
        </form>
    </div>
</div>
    
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems, {});
    });
</script>