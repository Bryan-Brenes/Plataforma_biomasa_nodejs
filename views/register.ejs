<div class="valign-wrapper container-login grey lighten-4">
    <div class="register-content-container z-depth-5">
        <h3>Registro</h3>
        <form action="/authUsuarios/register" method="POST">
            <div class="row">
                <div class="col s6 right-align">
                    <p>
                        <label>
                            <input name="group1" type="radio" checked />
                            <span>Particular</span>
                        </label>
                    </p>
                </div>
                <div class="col s6">
                    <p>
                        <label>
                            <input name="group1" type="radio" checked />
                            <span>Compañía</span>
                        </label>
                    </p>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s6">
                    <input name="nombre" id="nombre" type="text" class="validate">
                    <label for="nombre">Nombre</label>
                </div>
                <div class="input-field col s6">
                    <select>
                        <option value="" disabled selected>¿Qué tipo de usuario eres?</option>
                        <option value="1">Comprador</option>
                        <option value="2">Proveedor</option>
                        <option value="3">Distribuidor</option>
                    </select>
                    <label>Tipo de usuario</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <select>
                        <option value="" disabled selected>Provincia</option>
                        <option value="1">Alajueja</option>
                        <option value="2">Cartago</option>
                        <option value="3">Guanacaste</option>
                        <option value="4">Heredia</option>
                        <option value="5">Limón</option>
                        <option value="6">Puntarenas</option>
                        <option value="7">San José</option>
                    </select>
                    <label>Provincia</label>
                </div>
                    
                <div class="input-field col s6">
                    <input name="telefono" id="telefono" type="text" class="validate">
                    <label for="telefono">Teléfono</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6 full-height-2">
                    <textarea id="indicaciones" class="materialize-textarea full-height-2"></textarea>
                    <label for="indicaciones">Indicaciones</label>
                </div>
                <div class="col s6">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate">
                            <label for="email">Correo electrónico</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="password" type="password" class="validate">
                            <label for="password">Contraseña</label>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class='row'>
                <button type='submit' id="btn_login" name='btn_login' class='col s12 btn btn-large waves-effect'>Registrarse</button>
            </div>
            
        </form>
    </div>
</div>
    
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems, {});
    });
</script>